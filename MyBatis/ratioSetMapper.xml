<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- RATIO_SET -->
<mapper namespace="ABCDEFG.ratioSet">
    <!-- 结果映射 -->
    <resultMap id="ratioSetMap" type="RatioSetEntity">
        <id column="ID" property="id" jdbcType="INTEGER" />
        <result column="MINIMUM_CONSUMPTION" property="minimumConsumption" jdbcType="VARCHAR" />
        <result column="RATIO" property="ratio" jdbcType="VARCHAR" />
        <result column="TIME" property="time" jdbcType="VARCHAR" />
    </resultMap>
    
    <!-- 表所有字段 -->
    <sql id="allColumns">
        ID, MINIMUM_CONSUMPTION, RATIO, TIME
    </sql>
    
    <!-- 查询所有数据 -->
    <select id="findRatioSetAll" resultMap="ratioSetMap">
        SELECT
        <include refid="allColumns" />
        FROM RATIO_SET
    </select>
    
    <!-- 根据条件查询数据 -->
    <select id="findRatioSetByCondition" resultMap="ratioSetMap" parameterType="map">
        SELECT
        <include refid="allColumns" />
        FROM RATIO_SET WHERE 1 = 1
        <if test="minimumConsumption != null">
            AND MINIMUM_CONSUMPTION = #{minimumConsumption}
        </if>
        <if test="ratio != null">
            AND RATIO = #{ratio}
        </if>
        <if test="time != null">
            AND TIME = #{time}
        </if>
    </select>
    
    <!-- 根据主键查询数据 -->
    <select id="findRatioSetByIds" resultMap="ratioSetMap" parameterType="list">
        SELECT
        <include refid="allColumns" />
        FROM RATIO_SET WHERE ID IN
        <foreach collection="list" index="index" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>
    
    <!-- 插入数据 -->
    <insert id="insertRatioSet" parameterType="map">
        INSERT INTO RATIO_SET (<include refid="allColumns" />)
        VALUES (
            #{id},
            #{minimumConsumption},
            #{ratio},
            #{time}
        )
    </insert>
    
    <!-- 批量插入数据 -->
    <insert id="insertRatioSets" parameterType="list">
        INSERT INTO RATIO_SET (<include refid="allColumns" />)
        VALUES (
        <foreach collection="list" index="index" item="item" separator=",">
            (
                #{item.id},
                #{item.minimumConsumption},
                #{item.ratio},
                #{item.time}
            )
        </foreach>
    </insert>
    
    <!-- 修改数据 -->
    <update id="updateRatioSet" parameterType="map">
        UPDATE RATIO_SET SET
            MINIMUM_CONSUMPTION = #{minimumConsumption},
            RATIO = #{ratio},
            TIME = #{time}
        WHERE ID = #{id}
    </update>
    
    <!-- 批量修改数据 -->
    <update id="updateRatioSets" parameterType="list">
        <foreach collection="list" index="index" item="item" separator=";">
            UPDATE RATIO_SET SET
                MINIMUM_CONSUMPTION = #{item.minimumConsumption},
                RATIO = #{item.ratio},
                TIME = #{item.time}
            WHERE ID = #{item.id}
        </foreach>
    </update>
    
    <!-- 根据主键删除数据 -->
    <delete id="deleteRatioSetById" parameterType="string">
        DELETE FROM RATIO_SET WHERE ID = #{id}
    </delete>
    
    <!-- 根据主键批量删除数据 -->
    <delete id="deleteRatioSetByIds" parameterType="list">
        DELETE FROM RATIO_SET WHERE ID IN
        <foreach collection="list" index="index" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>